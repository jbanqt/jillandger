//- START - Declare default value vars here
block variables
- site_title = 'Jill and Ger'

if(page_title)
  - title=page_title + 'ï½œ' + site_title
else
  - title=site_title
//- END - Declare default value vars here

//- --START-- HTML codes begins here //
doctype html
html(lang="en")
  head
    //- --START-- metatags //
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=yes")

    if page_metatags
      each item in page_metatags
        meta(name=item['name'], content=item['content'])
    if og_metatags
      each item in og_metatags
        meta(property=item['name'], content=item['content'])
    meta(name="og:type", content="website")
    link(rel="icon" type="image/x-icon" href="/public/images/common/favicon.png")

    title=title
    //- --END-- metatags //

    //- --START-- Stylesheets CDNs //
    block cdn_css
    //- --START-- Stylesheets CDNs //
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kite+One&family=Single+Day&family=Titillium+Web:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700&family=Vibur&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="//embed.typeform.com/next/css/popup.css" />
    link(rel="stylesheet", href="../css/main.css")

    block customize_css

  body
    header.header
      //- Before the header content
      block before_header

      //- Include global header based files here
      if page_class == 'top'
        include header.pug
      //- After the header content
      block after_header

    main(class=page_class)
      //- Before the page content
      block before_content 

      //- Page content will appear here
      block content

      //- After the page content
      block after_content
    
    footer
      //- Before the footer content
      block before_footer

      //- Include global footer based files here

      //- After the footer content
      block after_footer
    

    //- --START-- CDN Scripts //
    script(src="https://cdn.rawgit.com/scottjehl/picturefill/3.0.2/dist/picturefill.min.js", defer)
    script(src="https://cdn.jsdelivr.net/npm/smoothscroll-polyfill@0.4.4/dist/smoothscroll.min.js", defer)
    script(src="https://cdn.jsdelivr.net/npm/vanilla-lazyload@17.8.3/dist/lazyload.min.js", defer)
    block cdn_scripts
    //- --END-- Scripts //

    //- --START-- Default scripts
    block customize_script
    //- --END-- Default scripts

//- --END-- HTML codes begins here //
